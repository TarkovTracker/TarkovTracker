{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "runtime": "nodejs18",
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "predeploy": "cd tarkov-tracker && npm ci && npm run build",
    "public": "tarkov-tracker/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/privacy",
        "destination": "https://www.termsfeed.com/live/b6d6f7fd-adc4-4717-8a2b-83daf9d8ddb9",
        "type": 302
      },
      {
        "source": "/terms",
        "destination": "https://www.termsfeed.com/live/d3a09e33-cd8e-4e08-8533-9c7a270d9ac1",
        "type": 302
      }
    ],
    "rewrites": [
      {
        "source": "/api/v2/**",
        "function": "apiv2-default"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 5002
    },
    "database": {
      "port": 5003
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true,
      "port": 4999
    }
  }
}
